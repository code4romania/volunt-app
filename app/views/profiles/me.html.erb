<div class="container profile">
  <%= render partial: 'shared/notice' %>
  <%= render @profile do %>
    <dl class="dl-horizontal">
      <dt></dt>
      <dd>
          <%= link_to 'Edit', edit_profile_path(@profile), class: 'btn btn-default' %>
      </dd>
    </dl>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
    <dl class="dl-horizontal">
      <% if @profile.is_fellow? %>
      <dd>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">Status <span class="pull-right"><%= glyphicon_link_to new_fellow_status_report_path(@profile), 'plus' %></span></h2>
          </div>
          <%= render partial: 'shared/status_reports_table', locals: {status_reports: @status_reports} %>
          <%= will_paginate @status_reports,
                param_name: 'status_reports_page',
                renderer: BootstrapPagination::Rails %>
        </div>
      </dd>
      <% end %>
      <% if is_user_level_fellow? %>
        <dd>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="panel-title">Proiecte</h2>
            </div>
            <%= render partial: 'shared/member_projects_table', locals: {members: @memberships} %>
            <%= will_paginate @memberships,
                param_name: 'memberships_page',
                renderer: BootstrapPagination::Rails %>
          </div>
        </dd>
      <% end %>
    </dl>
    </div>
  </div>
</div>
