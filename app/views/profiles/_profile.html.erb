<div class="row">
  <div class="col-sm-7">
    <dl class="dl-horizontal">
      <dt>Nume Complet</dt><dd><%= profile.full_name %></dd>
      <dt>Nume Scurt</dt><dd><%= profile.nick_name %></dd>
      <dt>Email</dt><dd><%= profile.email %></dd>
      <dt>Contact</dt><dd><%= render partial: 'shared/key_values',  locals: {key_values: profile.contacts} %></dd>
      <dt>Locație</dt><dd><%= profile.location %></dd>
      <dt>Ocupație</dt><dd><%= profile.title %></dd>
      <dt>Locul de muncă</dt><dd><%= profile.workplace %></dd>
      <dt>Creat la</dt><dd><%= profile.created_at %></dd>
      <dt>Skills</dt><dd><%= render partial: 'shared/skills', locals: {skills: profile.skills} %></dd>
      <dt>Skill wish list</dt><dd><%= render partial: 'shared/skills', locals: {skills: profile.skill_wish_list} %></dd>
      <dt>Links</dt><dd><%= render partial: 'shared/urls', locals: {urls: profile.urls} %></dd>
      <dt>Tags</dt><dd><%= render partial: 'shared/tags', locals: {tags: profile.tags} %></dd>
      <% if is_coordinator? %>
        <dt>Notițe</dt>
        <dd><%= sanitize_html_area(profile.notes) %></dd>
        <dt>Hidden Tags</dt>
        <dd><span class="profile-attributes"><%= render partial: 'shared/tags', locals: {tags: profile.hidden_tags, hidden: true } %></span></dd>
      <% end %>
    </dl>
  </div>
  <div class="col-sm-3 text-center">
    <img class="img-responsive img-rounded img-profile center-block" src="<%= httpsify(profile.photo) %>" />
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <dl class="dl-horizontal">
      <dt>Descriere</dt><dd><%= sanitize_html_area(profile.description) %></dd>
    </dl>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= yield %>
  </div>
</div>
