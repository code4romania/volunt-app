<dl class="dl-horizontal project">
  <%= yield :project_header %>
  <dt>Nume<dt>
  <dd><%= project.name %></dd>
  <dt>Beneficiar<dt>
  <dd><%= project.beneficiary %></dd>
  <dt>Status</dt>
  <dd><%= project_status_badge(project) %></dd>
  <dt>Lider</dt>
  <dd><%= profile_with_link(project.owner) %></dd>
  <dt>Descriere<dt>
  <dd><%= sanitize_html_area(project.description) %></dd>
  <dt>Obiectiv<dt>
  <dd><%= sanitize_html_area(project.objective) %></dd>
  <dt>Links</dt>
  <dd><%= render partial: 'shared/project_urls', locals: {project: project } %>
  <dt>Tags</dt>
  <dd><%= render partial: 'shared/tags', locals: {tags: project.tags} %></dd>
  <%= yield %>
</dl>

