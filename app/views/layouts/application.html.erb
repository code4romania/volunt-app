<!DOCTYPE html>
<html>
<head>
  <title>Code4Romania</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application", media: "all" %>
</head>
<body id="default-body">
  <header id="main-nav" class="navbar bs-docs-nav fixed" role="banner">
    <div class="container">
      <div class="navbar-header responsive-logo">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand"><%= image_tag 'code4-small.png', alt: "Code4Romania" %></a>
      </div>
      <nav class="main-navigation" role="navigation" id="site-navigation">
        <ul id="menu-nou" class="nav navbar-nav responsive-nav main-nav-list">
          <li class="nav-item">
            <%= link_to 'Home', projects_path %>
          </li>
          <li class="nav-item">
            <%= link_to 'Proiecte', projects_path %>
          </li>
          <li class="nav-item">
            <%= link_to 'Openings', openings_path %>
          </li>
          <%# render 'shared/documents_menu' %>
          <li role="presentation" class="nav-item dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Status<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My', my_status_reports_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Status Reports', status_reports_path %></li>
              <li><%= link_to 'Intilniri', meetings_path %></li>
            </ul>
          </li>
          <li role="presentation" class="nav-item dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <span class=""><%= current_user_email %><span class="caret"></span>
            </a>
            <%# Moved Profile dropdown to account dropdown %>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profil', me_path %></li>
              <li><%= link_to 'Schimbă parola', change_password_users_path %></li>
              <li><%= link_to 'Aplicanți', applicants_path %></li>
              <li><%= link_to 'Voluntari', volunteers_path %></li>
              <li><%= link_to 'Coordonatori', coordinators_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Participare', assignments_volunteers_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>

          <li class="nav-item is-floatRight">
            <a href="#">+</a>
          </li>

          <li class="nav-item is-floatRight">
            <a href="#">-</a>
          </li>
        </ul>


      </nav>
    </div>
  </header>
  <div class="main-content app-content">
    <%= yield %>
  </div>
  <%= render 'shared/footer' %>
  <%= render 'shared/summernote' %>
  <%= render 'shared/confirmation' %>
</body>
