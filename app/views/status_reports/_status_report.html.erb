<dl class="dl-horizontal">
  <dt>Ref</dt>
  <dd>
  <% unless status_report.profile.nil? %>
    <%= profile_with_link(status_report.profile) %>
  <% end %>
  <% unless status_report.project.nil? %>
    <%= project_with_link(status_report.project) %>
  <% end %>
  </dd>
  <dt>Data</dt>
  <dd><%= status_report.report_date.to_date %></dd>
  <dt>Sumar</dt>
  <dd><%= status_report.summary %></dd>
  <dt>Detaliat</dt>
  <dd><%= sanitize_html_area(status_report.details) %></dd>
  <dt>Tags</dt>
  <dd><%= render partial: 'shared/tags', locals: {tags: status_report.tags} %></dd>
  <%= yield %>
</dl>
